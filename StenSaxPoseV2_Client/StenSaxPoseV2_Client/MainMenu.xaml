<Page x:Class="StenSaxPoseV2_Client.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StenSaxPoseV2_Client"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Sten Sax Pose - MainMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Name="localBtn" Click="LocalBtn_Click">Play Local</Button>
        <Button Grid.Row="1" Name="onlineBtn" Click="OnlineBtn_Click">Play Online</Button>
        <Button Grid.Row="2" Name="optionsBtn" Click="OptionsBtn_Click">Options</Button>
        <Button Grid.Row="3" Name="quitBtn" Click="QuitBtn_Click">Quit</Button>
        
    </Grid>
</Page>
